{
    auto_https off  # Disable Caddy's HTTPS, as Cloudflare manages it
    admin off
    email admin@infiniteminds.cc
    log {
        output file /var/log/caddy_access.log
        level info
    }
}

# Redirect HTTP to HTTPS via Cloudflare
http://infiniteminds.cc, http://app.infiniteminds.cc {
    redir https://{host}{uri}
}

# Proxy HTTPS requests (Cloudflare to Backend)
https://infiniteminds.cc, https://app.infiniteminds.cc {
    tls {
        on_demand  # Let Cloudflare handle certificates
    }

    header {
        Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "no-referrer-when-downgrade"
        Content-Security-Policy "default-src 'self'"
    }

    # AWSBotService routing
    handle /s3* {
        reverse_proxy http://awsbotservice.railway.internal:8080
    }

    # Go Service routing
    handle /skills* {
        reverse_proxy http://go-service.railway.internal:8080
    }

    # SithBotModeManagerService routing
    handle /mode* {
        reverse_proxy http://sithbotmodemanagerservice.railway.internal:8080
    }

    # SithPythonServices routing
    handle /memory* {
        reverse_proxy http://sithpythonservices.railway.internal:8000
    }

    # SithGoServices routing
    handle /go* {
        reverse_proxy http://sithgoservices.railway.internal:8080
    }

    # Static file serving
    handle {
        root * /var/www/html
        file_server
    }

    # Error handling
    handle_errors {
        rewrite * /error.html
        file_server
    }
}
