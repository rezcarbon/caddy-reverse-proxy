auto_https off  # Disable Caddy's HTTPS since Cloudflare manages it
admin off
email admin@infiniteminds.cc
log {
    output file /var/log/caddy_access.log
    level info
}

# Redirect HTTP to HTTPS
http://infiniteminds.cc, http://app.infiniteminds.cc {
    redir https://{host}{uri} permanent
}

# Proxy HTTPS requests
https://infiniteminds.cc, https://app.infiniteminds.cc {
    tls {
        on_demand  # Let Cloudflare handle certificates
    }

    header {
        Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "no-referrer-when-downgrade"
        Content-Security-Policy "default-src 'self'"
        X-Forwarded-For {remote_host}
        X-Forwarded-Proto {scheme}
        Host {host}
    }

    # AWSBotService routing
    handle /s3* {
        reverse_proxy https://awsbotservice.railway.internal:443
    }

    # Go Service routing
    handle /skills* {
        reverse_proxy https://go-service.railway.internal:443
    }

    # SithBotModeManagerService routing
    handle /mode* {
        reverse_proxy https://sithbotmodemanagerservice.railway.internal:443
    }

    # SithPythonServices routing
    handle /memory* {
        reverse_proxy https://sithpythonservices.railway.internal:443
    }

    # SithGoServices routing
    handle /go* {
        reverse_proxy https://sithgoservices.railway.internal:443
    }

    # Static file serving
    handle {
        root * /var/www/html
        file_server
    }

    # Error handling
    handle_errors {
        rewrite * /error.html
        file_server
    }
}
