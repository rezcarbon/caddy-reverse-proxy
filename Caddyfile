{
    # Global options
    admin off
    email admin@infiniteminds.cc
    auto_https enable_redirects  # Automatically handle HTTPS redirects
    log {
        output file /var/log/caddy_access.log
        level info
    }
}

# Redirect all HTTP requests to HTTPS
http:// {
    redir https://{host}{uri}
}

# HTTPS Configuration
https:// {
    # Use Cloudflare for SSL certificate management
    tls {
        on_demand  # Allow Cloudflare to handle SSL certificates dynamically
    }

    header {
        Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "no-referrer-when-downgrade"
        Content-Security-Policy "default-src 'self'"
    }

    # AWSBotService routing
    handle /s3* {
        reverse_proxy http://awsbotservice.railway.internal:8080
    }

    # Go Service routing
    handle /skills* {
        reverse_proxy http://go-service.railway.internal:8080
    }

    handle /db-supported-skills* {
        reverse_proxy http://go-service.railway.internal:8080
    }

    handle /add-skill* {
        reverse_proxy http://go-service.railway.internal:8080
    }

    handle /supported-skills* {
        reverse_proxy http://go-service.railway.internal:8080
    }

    handle /skills/search* {
        reverse_proxy http://go-service.railway.internal:8080
    }

    handle /health {
        reverse_proxy http://go-service.railway.internal:8080
    }

    # SithBotModeManagerService routing
    handle /mode* {
        reverse_proxy {
            to http://sithbotmodemanagerservice.railway.internal:8080
        }
    }

    # SithPythonServices routing
    handle /memory* {
        reverse_proxy http://sithpythonservices.railway.internal:8000
    }

    # SithGoServices routing
    handle /go* {
        reverse_proxy {
            to http://sithgoservices.railway.internal:8080
        }
    }

    # Static file serving
    handle {
        root * /var/www/html
        file_server
    }

    # Error handling
    handle_errors {
        rewrite * /error.html
        file_server
    }
}
